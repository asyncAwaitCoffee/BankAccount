@{
	ViewBag.Title = "Products";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<section id="container">
	<aside>
		<a asp-controller="Product" class=@(ViewBag.Title == "Cards" ? "marked" : "") asp-action="Index">Credits</a>
		<a asp-controller="Product" class=@(ViewBag.Title == "Transfers" ? "marked" : "") asp-action="Index">Deposits</a>
		<a asp-controller="Product" class=@(ViewBag.Title == "Transfers" ? "marked" : "") asp-action="Index">Cards</a>
	</aside>
	<main>
		<h2>@ViewBag.Title</h2>
	</main>
</section>

@section Styles {
	<link href="~/styles/products/index.css" rel="stylesheet" />
}